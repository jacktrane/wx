<script>

//素材id
var mid = $.getUrlParam('mid') || '';

var NiuxLoginModule = Class.create();
NiuxLoginModule.getInstance = function() {
    if (!this._instance) {
        this._instance = new NiuxLoginModule();
    }
    return this._instance;
};

NiuxLoginModule.prototype = {
    /*初始化*/
    initialize: function() {
        var _this = this;

        /**
        * 初始化的默认配置
        * @private
        */
        this.defaultInitConfig = {
        };

        /**
        * 默认配置,可以在init或show时传入
        * @private
        */
        this.defaultConfig = {
            loginOkCallBack: function(){}, //登陆成功回调
            regOkCallBack: function(){}, //注册成功回调
            isCheckLogin: true //show的时候是否先检查已经登陆，如果已经登陆了就直接doLogin并且$.login.refresh();，默认true
        };

        _this.initConfig = _this.defaultInitConfig;
    },

    init : function(){
        var _this = this;
        /**
        * 判断是否已经init()了，只能初始化一次
        * @private
        */
        this.isAlreadyInit = false;


        _this.loginOkCallBack = function() {};

        xlQuickLogin.init({
            loginID: '103',
            REGISTER_ID: 'niux_web',
            IFRAME_ALLOW_TRANSPARENCY : true,
            UI_STYLE: 'http://static.webgame.kanimg.com/act/welcome/login.css',
            IFRAME_STYLE: {
                'width': '545px',
                'height': '337px'
            },
            DEFUALT_UI : 'register',
            THIRD_LOGIN_DISPLAY : false,
            REGISTER_TYPES: ['account'],
            LOGIN_SUCCESS_FUNC: function() {
                $.report.log({
                  game_id: niux.wel.config.gameid,
                  act_no: NIUX_ACTNO
                });

                NiuxLoginModule.getInstance().doLogin(); //登录成功执行回调
                //$.login.refresh();
                $.game.enterPageGame(niux.wel.config.gameno, niux.wel.config.fenqunum, "_self", {
                actNo: NIUX_ACTNO,
                mid : mid
                });

            },
            LOGOUT_FUNC: function() {

            },

            REGISTER_SUCCESS_FUNC: function () {
                //上报
                $.report.register({
                    game_id: niux.wel.config.gameid,
                    act_no: NIUX_ACTNO
                });

                $.game.enterPageGame(niux.wel.config.gameno, niux.wel.config.fenqunum, "_self", {
                    actNo: NIUX_ACTNO,
                    mid : mid
                });
            },
            AUTO_LOGIN_EXPIRE_TIME : 0, //禁止自动登录
            SET_ROOT_DOMAIN: true
        });

        xlQuickLogin.getLoginIframe('reg_box');

        this.isAlreadyInit = true;
    },

    /*登录成功*/
    doLogin: function() {
        this.hide();
        (typeof(this.loginOkCallBack) == 'function') && this.loginOkCallBack();
    },


    showReg: function(){
        var _this = this;

        if(!_this.isAlreadyInit){
            return ;
        }
        xlQuickLogin.showUI('register');

        $('.js-pop-title').removeClass('tit_login');
        $('.js-pop-title').addClass('tit_reg');

        $('#reg-name').show();
        $('#login-name').hide();

        $('#niuxLoginPopBox_nav_reg').hide();
        $('#niuxLoginPopBox_nav_login').show();

        $('#niuxLoginPopBox_regBox').show();
        $('#niuxLoginPopBox_cover').show();

    },

    showLogin: function(){
        var _this = this;
        if(!_this.isAlreadyInit){
            return ;
        }
        xlQuickLogin.showUI('login');

        $('.js-pop-title').addClass('tit_login');
        $('.js-pop-title').removeClass('tit_reg');

        $('#reg-name').hide();
        $('#login-name').show();

        $('#niuxLoginPopBox_nav_login').hide();
        $('#niuxLoginPopBox_nav_reg').show();

        $('#niuxLoginPopBox_regBox').show();
        $('#niuxLoginPopBox_cover').show();
    },


    center: function() {
        var curTop = 0;
        var windowHeight = $(window).height();
        var windowScrollTop = $(window).scrollTop();
        curTop = windowScrollTop + ((windowHeight - 520) / 2);
        this.loginPopBox.css({
            'top': curTop + 'px',
            'margin-top': '0px',
            'position': 'absolute'
        });
    },

    hide: function() {
        $("#niuxLoginPopBox_regBox").hide();
        $("#niuxLoginPopBox_noregBox, #niuxLoginPopBox_cover").hide();
    }
};

$(document).ready(function(){
    NiuxLoginModule.getInstance().init();
});

window.login = function(){
    if(!$.login.isLogined()){
        NiuxLoginModule.getInstance().showReg();
    }
}


window.onbeforeunload = function(){
    actReportClick('wintab','close');

    //关闭浏览器窗口时新开页面
    if(niux.wel.config.isCloseReOpen == 1){
        actReportClick('reopen','closeReOpenUrl');
        window.open(niux.wel.config.closeReOpenUrl);
    }
};

</script>


